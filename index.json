        {
            "title": "Legislators",
            "db_url": "/sqlite-data-host/legislators.db",
            "dashboard_items_tempate": "legislators"
        }
    ],
    "dashboard_templates": [
        {
            "name": "legislators",
            "dashboard_items": [
                {
                    "title": "Legislators",
                    "query": "SELECT * FROM legislators"
                },
                {
                    "title": "Offices",
                    "query": "SELECT * FROM offices WHERE legislator_id = '${id}';",
                    "parent": "Legislators",
                    "templated": true
                },
                {
                    "title": "Top 10 Legislators by Office Count",
                    "query": "WITH CTE AS (select * from legislators l INNER JOIN offices o on o.legislator_id = l.id) select name,  count(legislator_id) from CTE GROUP BY name ORDER BY 2 DESC LIMIT 10;"
                },
                {
                    "title": "Chart",
                    "type": "chart",
                    "chartType": "bar",
                    "query": "WITH CTE AS (select * from legislators l INNER JOIN offices o on o.legislator_id = l.id) select name,  count(legislator_id) as count from CTE GROUP BY name ORDER BY 2 DESC LIMIT 20;",
                    "options": {
                        "xField": "name",
                        "yField": "count"
                      
                    }
                },
                
                {
                    "title": "Chart 1",
                    "type": "chart",
                    "chartType": "pie",
                    "query": "WITH CTE AS (select * from legislators l INNER JOIN offices o on o.legislator_id = l.id) select name,  count(legislator_id) as count from CTE GROUP BY name ORDER BY 2 DESC LIMIT 20;",
                    "options": {
                        "xField": "name",
                        "yField": "count"
                        
                    }
                },
                
                
                {
                    "title": "Chart 3",
                    "type": "chart",
                    "chartType": "doughnut",
                    "query": "WITH CTE AS (select * from legislators l INNER JOIN offices o on o.legislator_id = l.id) select name,  count(legislator_id) as count from CTE GROUP BY name ORDER BY 2 DESC LIMIT 20;",
                    "options": {
                        "xField": "name",
                        "yField": "count"
                        
                    }
                },
                {
                    "title": "Chart 2",
                    "type": "chart",
                    "chartType": "line",
                    "query": "WITH CTE AS (select * from legislators l INNER JOIN offices o on o.legislator_id = l.id) select name,  count(legislator_id) as count from CTE GROUP BY name ORDER BY 2 DESC LIMIT 20;",
                    "options": {
                        "xField": "name",
                        "yField": "count"
                       
                    }
                }
            ]
        },
        {
            "name": "trades",
            "dashboard_items": [
                {
                    "title": "Compare summary",
                    "query": "SELECT * FROM entity_compare_results;"
                },
                {
                    "title": "${entity} Compare field summary",
